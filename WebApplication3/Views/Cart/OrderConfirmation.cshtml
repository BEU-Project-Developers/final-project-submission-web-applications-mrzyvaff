@model WebApplication3.Models.Order

@{
    ViewData["Title"] = "Order Confirmation";
}

<div class="container">
    <div class="row">
        <div class="col-md-8 offset-md-2">
            <div class="card">
                <div class="card-header bg-success text-white">
                    <h4 class="mb-0">Order Confirmed</h4>
                </div>
                <div class="card-body">
                    <div class="alert alert-success">
                        <i class="fa fa-check-circle me-2"></i> Your order has been placed successfully!
                    </div>
                    
                    <h5>Order Details</h5>
                    <div class="row">
                        <div class="col-md-6">
                            <p><strong>Order Number:</strong> #@Model.Id</p>
                            <p><strong>Order Date:</strong> @Model.OrderDate.ToString("MMMM dd, yyyy hh:mm tt")</p>
                            <p><strong>Status:</strong> @Model.Status</p>
                        </div>
                        <div class="col-md-6">
                            <p><strong>Delivery Address:</strong> @Model.DeliveryAddress</p>
                            <p><strong>Total Amount:</strong> $@Model.TotalAmount.ToString("0.00")</p>
                        </div>
                    </div>
                    
                    <h5 class="mt-4">Items Ordered</h5>
                    <div class="table-responsive">
                        <table class="table table-striped">
                            <thead>
                                <tr>
                                    <th>Product</th>
                                    <th>Price</th>
                                    <th>Quantity</th>
                                    <th>Total</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model.OrderItems)
                                {
                                    <tr>
                                        <td>@item.Product.Name</td>
                                        <td>$@item.UnitPrice.ToString("0.00")</td>
                                        <td>@item.Quantity</td>
                                        <td>$@((item.Quantity * item.UnitPrice).ToString("0.00"))</td>
                                    </tr>
                                }
                            </tbody>
                            <tfoot>
                                <tr>
                                    <td colspan="3" class="text-end"><strong>Total:</strong></td>
                                    <td><strong>$@Model.TotalAmount.ToString("0.00")</strong></td>
                                </tr>
                            </tfoot>
                        </table>
                    </div>
                </div>
                <div class="card-footer">
                    <div class="row">
                        <div class="col-md-6">
                            <a asp-controller="Home" asp-action="Index" class="btn btn-secondary">Return to Home</a>
                        </div>
                        <div class="col-md-6 text-end">
                            <a asp-controller="Product" asp-action="Index" class="btn btn-primary">Continue Shopping</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div> 