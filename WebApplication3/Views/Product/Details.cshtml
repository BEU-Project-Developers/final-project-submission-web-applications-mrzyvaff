@model WebApplication3.Models.Product

@{
    ViewData["Title"] = "Product Details";
    bool isAdmin = ViewBag.IsAdmin ?? false;
}

<div class="container mt-4">
    <h1>Product Details</h1>

    <div class="card">
        <div class="row g-0">
            <div class="col-md-4">
                @if (!string.IsNullOrEmpty(Model.ImageUrl))
                {
                    <img src="@Model.ImageUrl" class="img-fluid rounded-start" alt="@Model.Name" style="height: 100%; object-fit: cover;">
                }
                else
                {
                    <div class="bg-light d-flex align-items-center justify-content-center" style="height: 100%; min-height: 300px;">
                        <span class="text-muted">No image available</span>
                    </div>
                }
            </div>
            <div class="col-md-8">
                <div class="card-body">
                    <h5 class="card-title">@Model.Name</h5>
                    <p class="card-text">@Model.Description</p>
                    <p class="card-text"><strong>Price: $@Model.Price.ToString("F2")</strong></p>
                    <p class="card-text"><small class="text-muted">Category: @Model.Category</small></p>
                </div>
            </div>
        </div>
    </div>

    <div class="mt-3">
        @if (isAdmin)
        {
            <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning">Edit</a>
            <a asp-action="Delete" asp-route-id="@Model.Id" class="btn btn-danger">Delete</a>
        }
        <a asp-action="Index" class="btn btn-secondary">Back to List</a>
    </div>
</div> 