@model WebApplication3.Models.Product

@{
    ViewData["Title"] = "Delete Product";
    bool isAdmin = ViewBag.IsAdmin ?? false;
}

<div class="container mt-4">
    <h1>Delete Product</h1>
    <h3>Are you sure you want to delete this product?</h3>

    <div class="card mb-4">
        <div class="row g-0">
            <div class="col-md-4">
                @if (!string.IsNullOrEmpty(Model.ImageUrl))
                {
                    <img src="@Model.ImageUrl" class="img-fluid rounded-start" alt="@Model.Name" style="height: 100%; object-fit: cover;">
                }
                else
                {
                    <div class="bg-light d-flex align-items-center justify-content-center" style="height: 100%; min-height: 300px;">
                        <span class="text-muted">No image available</span>
                    </div>
                }
            </div>
            <div class="col-md-8">
                <div class="card-body">
                    <h5 class="card-title">@Model.Name</h5>
                    <p class="card-text">@Model.Description</p>
                    <p class="card-text"><strong>Price: $@Model.Price.ToString("F2")</strong></p>
                    <p class="card-text"><small class="text-muted">Category: @Model.Category</small></p>
                </div>
            </div>
        </div>
    </div>

    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Delete" class="btn btn-danger" />
        <a asp-action="Index" class="btn btn-secondary">Back to List</a>
    </form>
</div> 